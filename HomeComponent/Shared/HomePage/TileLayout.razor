
<!--Customizing the columns number  & the rows height -->

@code {
    string MyColor { get; set; }
}
<div class="Vignettes">
    <div style="display : flex ; row-gap: 10px  ">
 <h1 style="font-size: medium;
    margin-bottom: 22px;
    margin-top: 10px; margin-right : 2rem  ; 
    margin-left: 1rem; "> <TelerikFontIcon Icon="@FontIcon.Search" Size="md"/> @Tile_layout_title</h1>
 <span>
     <TelerikButton Icon="@FontIcon.Minus" OnClick="RemoveChildComponent" ThemeColor="primary"> </TelerikButton>
  </span>
  </div>

<TelerikTileLayout Columns="@numberofColumns" 
                   Class="task-list"
                   ColumnWidth="14rem"
                   RowHeight="10rem"
                   Resizable="true"
                   Reorderable="true"
                   RowSpacing="1px"
                  >

<!--we will make it dynamic class="Width : 1fr" -->

    <TileLayoutItems>
        <div style="display: flex; ">
             <!-- text showing the color value ! <p>Selected color: <span style="color: @MyColor">@MyColor</span></p>-->
        </div>
        @foreach ( var Data in childComponents )
            {
               <TileLayoutItem HeaderText=@Data.Header RowSpan="1">
                <Content>@Data.Content</Content>
                </TileLayoutItem>
            }
        </TileLayoutItems>
</TelerikTileLayout>
</div>
  <style>
      .Vignettes {
          width: 100%; 
      }
                      .CardsTile .k-tilelayout {
               background-color : transparent ; 
           }
            .task-list
            {

                gap: 1px 5px;
                padding: 0px 0px;
                 /*max-width : 1455px  ;*/ 
                width: 100% ; 
                overflow-x : auto ; 
                display: flex ; 
            }
            .task-list::-webkit-scrollbar {
                display: none; 
                width: 0;  /* Remove scrollbar space */
                background: transparent;  /* Optional: just make scrollbar invisible */
}
            .task-list > div {
             /*   aspect-ratio : 1 ; */
                min-width : 160px ; 
            }
            
            /* padding: 1px 8px; */"
        </style>

