<!-- Configuring and Creating the component of "Liste des favoris "-->
<!--It is called Instead FavorisLayout1 which is the component-->
<div> 
        <h1 style="font-size: medium;
                            margin-left: 1rem;
                            margin-top: 15px;">
       @Title
         </h1>
         <div class="FavorisHorizon">
        <TelerikTileLayout Columns="4" RowHeight="1fr" ColumnWidth="2fr" Resizable="true" Reorderable="true">
            <TileLayoutItems>
                @foreach (var item in List_favoris)
                {
                    <TileLayoutItem HeaderText="">
                        <Content>@item</Content>
                    </TileLayoutItem>
                }
            </TileLayoutItems>
        </TelerikTileLayout>
        </div>
</div>




